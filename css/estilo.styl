footer
.foot_index
	background #3B95D1
	color rgba(white, 0.5)
	text-align center
	width 100%
	

	.about_us
		background #07749f
		margin 0
		max-width 100%
		padding-left 0
		position relative

		li
			display inline-block
			padding 0.5em
			position relative
			
			a
				color white
				text-decoration none

				&:hover
					text-decoration underline

	h3
		font-size 14px
		font-weight normal
		margin 0
		padding-bottom 1em

