nav
	background white
	box-shadow 0 1px 0 rgba(0,0,0,0.2)
	box-sizing border-box
	height 60px
	position fixed
	text-align center
	top 0
	width 100%
	z-index 200

	.menu_principal
		height 77px
		line-height 60px
		margin 0 auto
		max-width 1200px
		overflow-x auto
		padding 0
		white-space nowrap

		&::-webkit-scrollbar
			display none

		.logo
			border-bottom none

			a
				font-size 17px

				img 
					margin 0 auto
					margin-right 0.5em
					position relative
					vertical-align middle
					width 60px

		li
			display inline-block
			margin -2px

			a
				box-sizing border-box
				color color_texto
				display block
				font-weight 500
				height 60px
				padding 0 0.2em
				text-align center
				text-decoration none
